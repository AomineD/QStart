<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wineberryhalley.qstartapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent">

        <com.wineberryhalley.qstart.ui.views.ImageLoadingView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/img_pic"
            android:layout_gravity="center"
            />

        <com.wineberryhalley.qstart.ui.views.RoundButton
            android:layout_width="250dp"
            android:id="@+id/btn_a"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:baselineAligned="false"
            app:backgroundColor="@color/dark_qs"
            app:buttonElevation="5dp"
            app:buttonRadius="10dp"
            app:text="JAJA"
            app:textBold="false"
            app:textColor="@color/white_qs"
            app:textPadding="8dp"
            app:textSize="18">

        </com.wineberryhalley.qstart.ui.views.RoundButton>


        <com.wineberryhalley.qstart.ui.views.QStartLoginButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/qstlg"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>